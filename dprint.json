{
	"lineWidth": 120,
	"useTabs": true,
	"typescript": {
		"quoteStyle": "preferSingle",
		"singleBodyPosition": "sameLine",
		"arrowFunction.useParentheses": "preferNone",
		"module.sortExportDeclarations": "maintain"
	},
	"json": {
	},
	"includes": [
		"**/*.{ts,tsx,jsx,cjs,mjs,json}",
		".github/workflows/*",
		"./website/src/pages/index.js"
	],
	"excludes": [
		"**/node_modules",
		"./website",
		"./deno",
		"taqueria-plugin-contract-types/example",
		"taqueria-vscode-extension/src/test/suite/data"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.85.1.wasm",
		"https://plugins.dprint.dev/json-0.17.4.wasm",
		"https://github.com/disrupted/dprint-plugin-css/releases/download/0.2.2/plugin.wasm"
	]
}
